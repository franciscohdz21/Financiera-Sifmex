// server/prisma/schema.prisma

// ---------- Generators ----------
generator client {
  provider = "prisma-client-js"
}

// ---------- Datasource ----------
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------- Enums ----------
enum Rol {
  CLIENTE
  AVAL
  NINGUNO
}

enum Role {
  ROOT
  GERENTE
  ADMIN
  EJECUTIVO
  SUPERVISOR
}

// ---------- Models ----------
model Contacts {
  id           Int      @id @default(autoincrement())
  nombre       String
  apellidos    String
  celular      String
  curp         String   @unique
  calleNumero  String?
  colonia      String?
  ciudad       String?
  estado       String?
  rol          Rol      @default(NINGUNO)

  // NUEVOS CAMPOS
  fallos       Int      @default(0) // 0..5
  notas        String?  @db.VarChar(100)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String   // hash bcrypt
  role      Role     @default(SUPERVISOR)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
